{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": false,
        "lib": [
            "dom",
            "es7",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
